<h1>EAT DA BURGER</h1>

<h2>Already Consumed</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}  
    {{/unless}}
  {{/each}}
</ul>

<h2>Devour Burgers</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bgr">Burger Type:</label>
    <input type="text" id="bgr" name="burger_name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="0" checked> Not Devoured<br>
    <input type="radio" name="devoured" value="1"> Devoured
  </div>

  <button type="submit">Add Burger</button>
</form>