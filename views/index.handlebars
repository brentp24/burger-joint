<h1>EAT DA BURGER</h1>

<h2>Already Consumed</h2>

<ol>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=true}}  
    {{/if}}
  {{/each}}
</ol>

<h2>Devour Burgers</h2>

<ol>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/unless}}
  {{/each}}
</ol>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bgr">Burger Type:</label>
    <input type="text" id="bgr" name="burger_name">
  </div>


  <button type="submit">Add Burger</button>
</form>